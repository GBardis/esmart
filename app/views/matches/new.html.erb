<div data-controller="matches">
  <%= semantic_form_for @match do |f| %>
  <%= f.inputs :name => "Select Game" do %>
  <%= select_tag :game_id, options_from_collection_for_select(@current_user_games, :id, :title), data: {target: {gamer_profiles: @gamer_profiles, users: @users}, action: "change->matches#populateOpponentSelectBox"},include_blank: true%>
<% end %>
<%= f.inputs :name => "Select opponent" do %>
<%= select_tag :player2_id, include_blank: true%>
<% end %>
<%= f.actions do %>
<%= f.action :submit, :as => :button %>
<%= f.action :cancel, :as => :link %>
<% end %>
<% end %>